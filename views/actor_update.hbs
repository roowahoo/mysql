{{#extends 'base'}}
{{#block 'content'}}
<h1>Create new actor</h1>
<form method='POST'>
    <div>
        <label class='form-label'>First Name</label>
        <input type='text' class='form-control' name='first_name' value={{actor.first_name}}>
    </div>
    <div>
        <label class='form-label'>Last Name</label>
        <input type='text' class='form-control' name='last_name' value={{actor.last_name}}>
    </div>
    <input type='submit' value='Update Actor ' class='btn btn-primary'>
</form>

{{/block}}
{{/extends}}